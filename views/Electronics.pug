extends layout
 
block content
  h1= title
  -
    const results = [
      { productname: "electronics0005", manufacturer : "dell", price: 199.99 },
      {productname: "Electronics 2", manufacturer: "Hp" , price: 249.99 },
      { productname: "Electronics 3", manufacturer: "Apple", price: 299.99 }
    ];
  .container-fluid
  .row
    - for (let i = 0; i < results.length; i++)
      .col-sm-2
      - let destination = `dispatch(\"/electronicss/update?id=${'6567d8904012d099dafa23d2'}\")`
      - let create = `dispatch(\"/electronicss/create")`
      - let detail = `dispatch(\"/electronicss/detail?id=${'6567d8904012d099dafa23d2'}\")`
      - let deleted1 = `dispatch(\"/electronicss/delete?id=${'6567d8904012d099dafa23d2'}\")`
        h4= results[i].productname
        h3(onclick=`buy(${i})`) BUY
        p manufacturer : #{results[i].manufacturer}
        p price: $#{results[i].price}
                button.btn( class="btn-primary ml-1", onclick= destination) Update
                button.btn( class="btn-primary ml-1", onclick= create) Create
                button.btn( class="btn-primary ml-1", onclick= detail) Detail
                button.btn( class="btn-primary ml-1", onclick= deleted1) Delete
        
 
  script.
      function dispatch(path) {
        window.location.href=path
      }