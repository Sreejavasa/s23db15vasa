extends layout
 
block content
  h1= title
  -
    const results = [
      { productname: "electronics0005", manufacturer : "dell", price: 199.99 },
      {productname: "Electronics 2", manufacturer: "Hp" , price: 249.99 },
      { productname: "Electronics 3", manufacturer: "Apple", price: 299.99 }
    ];
  .container-fluid
  .row
    - for (let i = 0; i < results.length; i++)
      .col-sm-2
      - let destination = `dispatch(\"/electronicss/update?id=${'65579f5ba7d28e81c5e2ed86'}\")`
        h4= results[i].productname
        h3(onclick=`buy(${i})`) BUY
        p manufacturer : #{results[i].manufacturer}
        p price: $#{results[i].price}
                button.btn( class="btn-primary ml-1", onclick= destination) Update
        
 
  script.
      function dispatch(path) {
        window.location.href=path
      }